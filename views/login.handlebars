<!-- Container for the login form with relative positioning -->
<div class="position-relative logFrm text-light">
    <!-- Centered dark background box for the login form -->
    <div class="px-2 bg-slate-700 position-absolute top-50 start-50 translate-middle">
        <div>
            <!-- Login form with action pointing to "signup" -->
            <form action="signup" id="login-form">
                <!-- Login form header -->
                <h2>Sign In</h2>
                
                <!-- Username input field -->
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input id="username-login" class="form-control" type="text">
                </div>
                
                <!-- Password input field -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input id="password-login" type="password" class="form-control">
                </div>
                
                <!-- Login button centered in the form -->
                <div class="d-flex justify-content-center pb-2">
                    <button type="submit" class="btn btn-light">Sign In</button>
                </div>
                
                <!-- Link to the signup page -->
                <p><a class="link-offset-2 link-underline link-underline-opacity-0" href="/signup">Not a member? Register now</a></p>
            </form>
        </div>
    </div>
</div>

<!-- Script for handling login functionalities -->
<script src="/js/login.js"></script>
