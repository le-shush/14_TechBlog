<!-- Container for the signup form with relative positioning -->
<div class="relative sngForm text-white">
    <!-- Centered dark background box for the signup form -->
    <div class="px-2 bg-gray-800 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
        <div>
            <!-- Signup form with action pointing to "signup" -->
            <form action="signup" id="sign-form">
                <!-- Signup form header -->
                <h2>Register</h2>
                
                <!-- Username input field -->
                <div class="mb-3">
                    <label class="block mb-1" for="username">Username</label>
                    <input id="username-sign" class="w-full p-2 border rounded-md" type="text">
                </div>
                
                <!-- Email input field -->
                <div class="mb-3">
                    <label class="block mb-1" for="email">Email Address</label>
                    <input id="email-sign" type="text" class="w-full p-2 border rounded-md">
                </div>
                
                <!-- Password input field -->
                <div class="mb-3">
                    <label class="block mb-1" for="password">Password</label>
                    <input id="password-sign" type="password" class="w-full p-2 border rounded-md">
                </div>
                
                <!-- Signup button centered in the form -->
                <div class="flex justify-center pb-2">
                    <button type="submit" class="bg-white text-black px-4 py-2 rounded">Register</button>
                </div>
                
                <!-- Link to the login page -->
                <p><a class="underline hover:no-underline" href="/login">Have an account? Sign in</a></p>
            </form>
        </div>
    </div>
</div>

<!-- Script for handling signup functionalities -->
<script src="/js/signup.js"></script>
